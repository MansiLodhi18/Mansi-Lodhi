
{% comment %}
  Ecomexperts — Banner section
  - All red-rectangle texts are editable
  - Buttons use animated arrow/shine (CSS in assets/ee-test.css)
  - No jQuery
{% endcomment %}

{{ 'ee-test.css' | asset_url | stylesheet_tag }}
{{ 'ee-test.js'  | asset_url | script_tag }}

<section class="ee-banner" style="{% if section.settings.bg_image != blank %}background-image:url({{ section.settings.bg_image | image_url }});{% endif %}">
  <div class="ee-container">
    <div class="ee-banner__top">
      <div class="ee-brand">{{ section.settings.brand_badge }}</div>
      <div class="ee-eyebrow">{{ section.settings.announcement }}</div>
      <a class="ee-btn ee-btn--primary" href="{{ section.settings.cta_primary_link }}">
        {{ section.settings.cta_primary_label }} <span class="ee-arrow">→</span>
      </a>
    </div>

    <div style="margin-top: clamp(12px, 3vw, 24px);">
      <h1 class="ee-lead">{{ section.settings.headline }}</h1>
      <p class="ee-subcopy">{{ section.settings.subcopy }}</p>

      <div class="ee-banner__cta">
        <a class="ee-btn ee-btn--dark" href="{{ section.settings.cta_secondary_link }}">
          {{ section.settings.cta_secondary_label }} <span class="ee-arrow">→</span>
        </a>
      </div>
    </div>

    <div class="ee-banner__bottom">{{ section.settings.bottom_strip }}</div>
  </div>
</section>

{% javascript %}
  {{ 'ee-test.js' | asset_url | script_tag }}
{% endjavascript %}

{% schema %}
{
  "name": "EE • Banner",
  "settings": [
    { "type": "image_picker", "id": "bg_image", "label": "Background image (optional)" },
    { "type": "text", "id": "brand_badge", "label": "Brand badge", "default": "TISSO VISON" },
    { "type": "text", "id": "announcement", "label": "Announcement text", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "headline", "label": "Headline", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subcopy", "label": "Sub copy", "default": "Discover Joy: Your Ultimate Holiday Gift Destination..." },
    { "type": "text", "id": "cta_primary_label", "label": "Primary button label", "default": "CHOOSE GIFT →" },
    { "type": "url",  "id": "cta_primary_link",  "label": "Primary button link", "default": "#grid" },
    { "type": "text", "id": "cta_secondary_label", "label": "Secondary button label", "default": "SHOP NOW →" },
    { "type": "url",  "id": "cta_secondary_link",  "label": "Secondary button link", "default": "/collections/all" },
    { "type": "text", "id": "bottom_strip", "label": "Bottom strip text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [{ "name": "EE • Banner" }]
}
{% endschema %}