
{% comment %}
  Custom Banner â€” pixel-perfect editable bits per screenshot
  Everything in the red rectangles is exposed as settings.
  No Dawn components used.
{% endcomment %}

<section class="hero-banner hero-banner--{{ section.id }}">
  {% if section.settings.bg_image != blank %}
    <div class="hero-banner__bg" style="--bg:url({{ section.settings.bg_image | img_url: '2000x' }});"></div>
  {% endif %}

  <div class="hero-banner__inner">

    {%- comment -%} Top row: brand badge (left), thin bar text (center), yellow button (right) {%- endcomment -%}
    <div class="hero-banner__top">
      {% if section.settings.brand_badge != blank %}
        <span class="hero-badge">{{ section.settings.brand_badge }}</span>
      {% endif %}

      {% if section.settings.thin_bar_text != blank %}
        <span class="hero-thinbar">{{ section.settings.thin_bar_text }}</span>
      {% endif %}

      {% if section.settings.top_cta_label != blank %}
        <a class="btn-pill btn-pill--accent" href="{{ section.settings.top_cta_link | default: '#' }}">
          <span>{{ section.settings.top_cta_label }}</span>
          <svg class="btn-pill__icon" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M13 5l7 7-7 7M4 12h16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}
    </div>

    {%- comment -%} Main headline {%- endcomment -%}
    {% if section.settings.heading != blank %}
      <h1 class="hero-heading">{{ section.settings.heading }}</h1>
    {% endif %}

    {%- comment -%} Description block (rich text) {%- endcomment -%}
    {% if section.settings.description != blank %}
      <div class="hero-desc">{{ section.settings.description }}</div>
    {% endif %}

    {%- comment -%} Black CTA button {%- endcomment -%}
    {% if section.settings.main_cta_label != blank %}
      <a class="btn-cta" href="{{ section.settings.main_cta_link | default: '#' }}">
        <span>{{ section.settings.main_cta_label }}</span>
        <svg class="btn-cta__icon" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M13 5l7 7-7 7M4 12h16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    {% endif %}

  </div>

  {%- comment -%} Bottom ribbon {%- endcomment -%}
  {% if section.settings.ribbon_text != blank %}
    {% assign ribbon_tag = section.settings.ribbon_link | default: blank | size | plus: 0 %}
    <div class="hero-ribbon" style="--ribbon-bg: {{ section.settings.ribbon_bg }}; --ribbon-fg: {{ section.settings.ribbon_fg }};">
      {% if section.settings.ribbon_link != blank %}
        <a href="{{ section.settings.ribbon_link }}" class="hero-ribbon__link">{{ section.settings.ribbon_text }}</a>
      {% else %}
        <span class="hero-ribbon__text">{{ section.settings.ribbon_text }}</span>
      {% endif %}
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Pixel Banner (Custom)",
  "settings": [
    { "type": "image_picker", "id": "bg_image", "label": "Background image (illustration)" },

    { "type": "text", "id": "brand_badge", "label": "Top-left brand badge", "default": "TISSO VISON" },

    { "type": "text", "id": "thin_bar_text", "label": "Top-center thin bar text", "default": "Find the ideal gift for your loved ones." },

    { "type": "text", "id": "top_cta_label", "label": "Top-right button label", "default": "CHOOSE GIFT" },
    { "type": "url",  "id": "top_cta_link", "label": "Top-right button link" },

    { "type": "text", "id": "heading", "label": "Main heading", "default": "The Gift Guide" },

    { "type": "richtext", "id": "description", "label": "Description", "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>" },

    { "type": "text", "id": "main_cta_label", "label": "Black CTA label", "default": "SHOP NOW" },
    { "type": "url",  "id": "main_cta_link",  "label": "Black CTA link" },

    { "type": "text", "id": "ribbon_text", "label": "Bottom ribbon text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" },
    { "type": "url",  "id": "ribbon_link", "label": "Bottom ribbon (optional link)" },
    { "type": "color", "id": "ribbon_bg", "label": "Ribbon background", "default": "#CDEB5B" },
    { "type": "color", "id": "ribbon_fg", "label": "Ribbon text color", "default": "#111111" }
  ],
  "presets": [{ "name": "Pixel Banner (Custom)" }]
}
{% endschema %}