
{% comment %}
  Banner with editable rectangles + animated button
{% endcomment %}

<section class="banner-rectangles">
  <div class="container">
    <div class="rectangles-grid">
      {% for block in section.blocks %}
        <div class="rectangle">
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank %}
      <div class="banner-button-wrap">
        <a href="{{ section.settings.button_link }}" class="animated-btn">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .banner-rectangles {
    padding: 40px 20px;
    text-align: center;
  }

  .rectangles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns, change if needed */
    gap: 20px;
    margin-bottom: 30px;
  }

  .rectangle {
    background: #f4f4f4;
    padding: 40px 20px;
    border-radius: 8px;
    font-size: 18px;
    font-weight: bold;
    transition: transform 0.3s ease;
  }

  .rectangle:hover {
    transform: translateY(-5px);
    background: #e8e8e8;
  }

  .banner-button-wrap {
    margin-top: 20px;
  }

  .animated-btn {
    display: inline-block;
    background: #000;
    color: #fff;
    padding: 12px 24px;
    border-radius: 6px;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    animation: pulse 2s infinite;
    transition: background 0.3s ease;
  }

  .animated-btn:hover {
    background: #333;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
</style>

{% schema %}
{
  "name": "Banner with Rectangles",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "rectangle",
      "name": "Rectangle",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Rectangle text",
          "default": "Your Text Here"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Banner with Rectangles",
      "category": "Banner"
    }
  ]
}
{% endschema %}